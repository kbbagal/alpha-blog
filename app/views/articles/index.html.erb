<h1>Articles list</h1>
<% @articles.each do |article| %>
  <div class="card" class="shadow p-3 mb-5 bg-white rounded" style="width: 18rem;">
    <h5 class="card-header"><%= article.title %></h5>
    <div class="card-body">
      <h5 class="card-title">By <%= article.user.full_name %></h5>
      <p class="card-text"><p><%= article.description %></p>
      <p><strong>Created At:</strong>&nbsp;&nbsp;<%= time_ago_in_words(article.created_at) %></p>
      <p><strong>Updated At :</strong>&nbsp;&nbsp;<%= time_ago_in_words(article.created_at) %></p>
      <%= link_to "View", article_path(article), class:"btn btn-primary mr-2" %>
      <%= link_to "Edit", edit_article_path(article), class:"btn btn-success mr-2" %>
      <%= link_to "Delete", article_path(article), method: :delete, data: {confirm: 'Are you sure you want to delete?'},class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>