<%
  if @article.new_record?
    url = :articles
    method = :post
    heading_text = "New Article"
    action_button_text = "Create"
  else
    url = :article
    method = :patch
    heading_text = "Edit Article"
    action_button_text = "Edit"
  end
%>
<h1><%= heading_text %></h1>
<%= form_with(model: @article, url: url, method: method) do |f| %>
  <div class="form-group">
    <%= f.text_field :title, placeholder: "Enter title", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label "Description", :description %>
    <%= f.text_area :description, placeholder: "Enter description", class: "form-control", rows: "3" %>
  </div>
  <div class="form-group">
    <%= f.submit action_button_text, class: "btn btn-success" %>
    <%= link_to "Cancel", articles_path, class: "btn btn-danger" %>
  </div>
<% end %>