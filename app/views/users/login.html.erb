<h1> Log in to alpha blog </h1>

<div>
  <%= form_with(model: @user, url: sessions_path, method: :post, local: true) do |f|%>
    <div class="form-group">
      <%= f.label :username, "User name" %>
      <%= f.text_field :username, placeholder: "Enter username", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password, "Password" %>
      <%=f.password_field :password, placeholder: "Enter password", class: "form-control" %>
    </div>
    <%= f.submit "Sign In", class: 'btn btn-primary' %>
  <% end %>
</div>